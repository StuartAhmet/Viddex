
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="flex" style="justify-content:center;">
    <div class="box blue" style="width:600px; margin-top:40px">
      <h2>Login</h2>

      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions flex justify-center items-center h-10 rounded-lg bg-black" style="width:100%;border-radius:5px">
        <%= f.button :submit, "Login", class: "text-xl mx-8 text-white", style: "width:100%;border-radius:5px" %>
      </div>

      <%= render "devise/shared/links" %>

    <%# <%= button_to  'Login with Google', user_google_oauth2_omniauth_authorize_path, method: :post, :data => {turbo: "false"} %>

    </div>
  </div>
<% end %>
