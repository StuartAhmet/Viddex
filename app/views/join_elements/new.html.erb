<div class="page-container pt-8">
  <div class="mb-8">
    <%= link_to user_video_path(@user, @video) do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>
  </div>

  <div class="flex justify-between gap-5">

    <%= render "join_elements/form", user: @user, video: @video, join_element: @join_element %>

    <div class="w-1/2 bg-white rounded-lg">
      <div class="m-8">
        <h2 class="text-xl font-bold mb-3"><%= @video.title %></h2>
        <%= render "join_elements/item", video: @video %>
      </div>

      <div class="flex justify-center items-center bg-white rounded-bl-lg rounded-br-lg p-8 border-t border-black z-10">
        <%= link_to user_video_path(@user, @video) do %>
          <div class="flex justify-center items-center h-10 rounded-lg bg-black">
            <h2 class="text-xl font-bold mx-8 text-white">Save video</h2>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
