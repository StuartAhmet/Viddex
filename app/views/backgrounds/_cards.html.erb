    <div class="box orange scroll-container overflow-auto" style="width: 100%;margin-left:0;height:83vh">
      <div class="flex flex-wrap content-start overflow-auto " style="justify-content:flex-start">
            <% @user.backgrounds.reverse.each do |background| %><%= render "backgrounds/modal", background: background %>
              <div class="flex" style="flex-direction:column"  type="button" data-bs-toggle="modal" data-bs-target=<%= "#exampleModal#{background.id}" %>>
                <div class="item-card" style="margin-bottom:20px;margin-right:20px">
